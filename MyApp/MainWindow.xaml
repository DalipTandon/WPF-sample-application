<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="MyApp.MainWindow"
        Title="Main Window" Height="400" Width="600"
        WindowStartupLocation="CenterScreen" Background="White"
        SizeToContent="Manual">
    <DockPanel>
        <Menu DockPanel.Dock="Top" Background="LightSteelBlue" Padding="10">
            <MenuItem Header="FILE">
                <MenuItem Header="Save" Foreground="Black">
                    <MenuItem.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF7898B3" Offset="1" />
                            <GradientStop Color="White" />
                        </LinearGradientBrush>
                    </MenuItem.Background>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Exit"  Foreground="Red">
                    <MenuItem.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF7898B3" Offset="1" />
                            <GradientStop Color="White" />
                        </LinearGradientBrush>
                    </MenuItem.Background>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="ADD" Click="AddEntity_Click"/>
            <MenuItem Header="VIEW"/>

        </Menu>
       
    </DockPanel>
</Window>
