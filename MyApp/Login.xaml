<Window x:Class="MyApp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="450" Width="400" 
        WindowStartupLocation="CenterScreen" Background="#E3E4E8">

    <Grid>
        <!-- Card Container -->
        <Border CornerRadius="12" Background="White" Padding="25" Width="350" Height="400"
                HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="#D1D5DB" BorderThickness="1"
                Effect="{DynamicResource DropShadowEffect}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="65"/>
                    <RowDefinition Height="65"/>
                    <RowDefinition Height="65"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Text="Login" FontSize="26" FontWeight="Bold" Foreground="#333"
                           HorizontalAlignment="Center" Margin="0,10,0,20"/>

                <!-- Email Field -->
                <StackPanel Grid.Row="1" Margin="10">
                    <TextBlock Text="Email" Foreground="#555" FontSize="14" FontWeight="SemiBold"/>
                    <Border CornerRadius="8" BorderBrush="#999" BorderThickness="1" Background="White">
                        <TextBox Name="txtEmail" Height="45" Background="Transparent" Padding="2" BorderThickness="0"/>
                    </Border>
                </StackPanel>

                <!-- Name Field -->
                <StackPanel Grid.Row="2" Margin="10">
                    <TextBlock Text="Name" Foreground="#555" FontSize="14" FontWeight="SemiBold"/>
                    <Border CornerRadius="8" BorderBrush="#999" BorderThickness="1" Background="White">
                        <TextBox Name="txtName" Height="35" Background="Transparent" Padding="5" BorderThickness="0"/>
                    </Border>
                </StackPanel>

                <!-- Password Field -->
                <StackPanel Grid.Row="3" Margin="10">
                    <TextBlock Text="Password" Foreground="#555" FontSize="14" FontWeight="SemiBold"/>
                    <Border CornerRadius="8" BorderBrush="#999" BorderThickness="1" Background="White">
                        <PasswordBox Name="txtPassword" Height="35" Background="Transparent" Padding="5" BorderThickness="0"/>
                    </Border>
                </StackPanel>

                <!-- Login Button -->
                <Button Content="Login" Grid.Row="4" Width="150" Height="40" 
                        Background="#0078D7" Foreground="White" FontSize="16"
                        FontWeight="Bold" Cursor="Hand" Click="Login_Click"
                        HorizontalAlignment="Center" Margin="10"
                        BorderBrush="#0056A3" BorderThickness="1" />

            </Grid>
        </Border>
    </Grid>
</Window>
